{
  "name": "supervisor_agent_config",
  "version": "1.0.0",
  "description": "Configuration for Comprehensive Supervisor Agent",
  "monitoring": {
    "enabled": true,
    "real_time_enabled": true,
    "evaluation_interval": 5.0,
    "confidence_threshold": 0.7,
    "history_limit": 1000,
    "alert_thresholds": {
      "task_completion": 0.8,
      "instruction_adherence": 0.9,
      "output_quality": 0.8,
      "resource_usage": 0.9
    }
  },
  "error_handling": {
    "enabled": true,
    "max_retries": 3,
    "max_snapshots": 50,
    "escalation_enabled": true,
    "auto_escalation": true,
    "rollback_enabled": true,
    "loop_detection_enabled": true
  },
  "reporting": {
    "enabled": true,
    "real_time_updates": true,
    "dashboard_enabled": true,
    "auto_report_enabled": true,
    "report_frequency_hours": 24,
    "audit_logging": true,
    "alert_notifications": true,
    "pattern_detection": true
  },
  "storage": {
    "base_path": "supervisor_data",
    "monitoring_path": "supervisor_data/monitoring",
    "error_handling_path": "supervisor_data/error_handling",
    "reporting_path": "supervisor_data/reporting",
    "knowledge_base_path": "supervisor_data/knowledge_base",
    "audit_path": "supervisor_data/audit",
    "snapshots_path": "supervisor_data/snapshots",
    "retention_days": 30,
    "max_log_size_mb": 100
  },
  "security": {
    "encryption_enabled": false,
    "access_control_enabled": false,
    "audit_all_access": true,
    "secure_communication": false
  },
  "performance": {
    "max_concurrent_sessions": 50,
    "max_workers": 4,
    "memory_limit_mb": 2048,
    "cpu_limit_percent": 80
  },
  "integration": {
    "framework_support": [
      "mcp",
      "langchain",
      "autogen",
      "custom"
    ],
    "webhook_enabled": false,
    "api_enabled": true,
    "export_formats": [
      "json",
      "csv",
      "markdown"
    ]
  }
}